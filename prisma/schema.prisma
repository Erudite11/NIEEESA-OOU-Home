generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Using string fields for Level/Semester/FileType because the
// current SQLite connector in this environment does not support
// Prisma enums. Application code enforces allowed values.
model Material {
  id            Int      @id @default(autoincrement())
  title         String
  level         String
  semester      String
  fileType      String
  url           String
  publicId      String?   
  originalName  String?
  createdAt     DateTime @default(now())
}